{
  "name": "eco-training-disaster",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run frontend\" \"npm run backend\" ",
    "frontend": "vite --port 3000",
    "backend": "NODE_OPTIONS='--max-old-space-size=8192' node backend/server.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:complete": "npm run build:frontend && npm run build:backend",
    "build:production": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend is already built (JavaScript)'",
    "build:docs": "npm run generate:pdf && npm run generate:slides",
    "generate:pdf": "bash UF-Zoom/generate-dossier-pdf.sh",
    "generate:slides": "bash UF-Zoom/generate-slide.sh",
    "test:ecoindex": "node scripts/ecoindex-test.cjs",
    "test:greenit": "node scripts/greenit-test.cjs",
    "test:rgesn": "node scripts/rgesn-compliance.cjs",
    "test:eco": "npm run test:ecoindex && npm run test:greenit && npm run test:rgesn",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern backend/",
    "preview": "vite preview",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "lighthouse:dev": "npm run dev & sleep 10 && npm run lighthouse && pkill -f 'npm run dev'",
    "lighthouse:build": "npm run build && npm run preview & sleep 5 && npm run lighthouse && pkill -f 'npm run preview'",
    "test:eco-lighthouse": "npm run lighthouse:build",
    "audit:full": "npm run lighthouse:build && npm run lighthouse:dev"

  },
  "dependencies": {
    "@types/three": "^0.162.0",
    "axios": "^1.6.8",
    "bootstrap": "^5.3.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jquery": "^3.7.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.344.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "popper.js": "^1.16.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.2",
    "three": "^0.162.0",
    "victory": "^37.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jquery": "^3.5.29",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "chrome-launcher": "^1.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.2"
  }
}
